{
	"name": "get_file_names_ppl",
	"properties": {
		"activities": [
			{
				"name": "get file names",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "input_file_names",
						"type": "DatasetReference",
						"parameters": {
							"container_name": {
								"value": "@variables('container_name')",
								"type": "Expression"
							}
						}
					},
					"fieldList": [
						"childItems"
					],
					"storeSettings": {
						"type": "AzureBlobStorageReadSettings",
						"enablePartitionDiscovery": false
					},
					"formatSettings": {
						"type": "DelimitedTextReadSettings"
					}
				}
			}
		],
		"variables": {
			"container_name": {
				"type": "String",
				"defaultValue": "rawdata"
			},
			"folder_name": {
				"type": "String",
				"defaultValue": "Movie"
			}
		},
		"annotations": []
	}
}